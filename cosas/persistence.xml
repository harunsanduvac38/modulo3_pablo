<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="myJpaUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades escaneadas automáticamente si usas JPA bootstrap con CDI -->
        <class>com.example.model.MiEntidad</class>
        <!-- Agrega más clases o usa un classpath scanning -->

        <properties>
            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tu_base_de_datos"/>
            <property name="jakarta.persistence.jdbc.user" value="tu_usuario"/>
            <property name="jakarta.persistence.jdbc.password" value="tu_contraseña"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- create, update, validate, none -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Opcional: Escaneo automático si estás usando un contenedor como Spring Boot -->
            <!-- <property name="hibernate.archive.autodetection" value="class"/> -->
        </properties>
    </persistence-unit>
</persistence>
